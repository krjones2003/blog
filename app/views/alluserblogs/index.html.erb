<h1> Listing All User Blogs </h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  
    <th>Userblog_id</th>
    <th>User_id</th>
    <th></th>
  </tr>

<% @userblogs.each do |userblog| %>
  <tr>
    <td><%= userblog.title %></td>
    <td><%= userblog.description %></td>
    <td><%= userblog.id %></td>
    <td><%= userblog.user_id %> </td>
     
    <td><%= link_to 'Show', user_userblog_path(userblog.user_id ,userblog.id)  %> </td> 
    <td><%= link_to 'Edit', edit_user_userblog_path(userblog.user_id , userblog.id)  %>  </td>   
    <td><%= link_to 'Destroy', user_userblog_path(userblog.user_id, userblog.id), :method => :delete %> </td>  
  </tr>
<% end %>
</table>

<br />

<%= link_to 'See Users', users_path %> 

